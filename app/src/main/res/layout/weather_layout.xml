<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    android:padding="16dp"
    android:scrollbars="none">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Page -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/instrument_sans_medium"
            android:text="Weather"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Weather Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black_bg"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Weather Location -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/weatherLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="Lorem ipsum"
                        android:textColor="@android:color/white"
                        android:textSize="28sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text=", Indonesia"
                        android:textColor="@android:color/white"
                        android:textSize="28sp" />
                </LinearLayout>


                <!-- Weather Animation -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/weatherAnimation"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/cloudy_animation" />

                <!-- Weather Temperature -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/weatherTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Lorem"
                    android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <!-- Weather Condition -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/weatherCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Lorem ipsum dolor."
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- Weather Date -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/weatherDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Lorem ipsum."
                    android:textColor="@color/light_gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Additional Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Wind Speed -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="Thumbnail"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_wind"
                        app:shapeAppearanceOverlay="@style/CircularImageView" />

                    <!-- Row 2 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/instrument_sans_medium"
                        android:text="Wind Speed"
                        android:textColor="@color/black_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Row 3 -->
                    <TextView
                        android:id="@+id/windSpeedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Lorem"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chance of Rain -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="Thumbnail"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_cloud_rain"
                        app:shapeAppearanceOverlay="@style/CircularImageView" />

                    <!-- Row 2 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/instrument_sans_medium"
                        android:gravity="center"
                        android:text="Chance of Rain"
                        android:textColor="@color/black_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Row 3 -->
                    <TextView
                        android:id="@+id/rainChanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Lorem"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Humidity -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="Thumbnail"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_droplets"
                        app:shapeAppearanceOverlay="@style/CircularImageView" />

                    <!-- Row 2 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/instrument_sans_medium"
                        android:text="Humidity"
                        android:textColor="@color/black_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Row 3 -->
                    <TextView
                        android:id="@+id/humidityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Lorem"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="14dp"
            android:background="#33000000" />

        <!-- Recycler -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <!-- Layout mode -->
            <LinearLayout
                android:id="@+id/layoutViewMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <!-- Title Card-->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/instrument_sans_medium"
                        android:gravity="center"
                        android:text="Other Weather Forecasts"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Card Content -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weatherRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingVertical="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
