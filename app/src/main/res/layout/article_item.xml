<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <!-- Layout view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ArticleImage"
                    android:layout_width="135dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Thumbnail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_sf25"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />

                <!-- Content Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <TextView
                        android:id="@+id/ArticleTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/instrument_sans_medium"
                        android:maxLines="3"
                        android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit."
                        android:textColor="@color/black_bg"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Row 2 -->
                    <TextView
                        android:id="@+id/ArticleContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/space_grotesk"
                        android:maxLines="4"
                        android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit quisque faucibus ex sapien."
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <!-- Spacer untuk mendorong teks bawah -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ReadMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Read more"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="bottom"
                            android:contentDescription="Icon"
                            android:src="@drawable/icon_arrow_up_right" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
