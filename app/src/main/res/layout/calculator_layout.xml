<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    android:padding="16dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Page -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/instrument_sans_medium"
            android:text="Calculator"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Screen Result -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/calc_display_result"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Expression -->
            <TextView
                android:id="@+id/tvExpression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:gravity="end"
                android:maxLines="1"
                android:text="0"
                android:textColor="#666666"
                android:textSize="20sp" />

            <!-- Result -->
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:gravity="end"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sqrt"
                style="@style/CalcButtonSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_radical"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pi"
                style="@style/CalcButtonSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_pi"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_square"
                style="@style/CalcButtonSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="XÂ²" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_factorial"
                style="@style/CalcButtonSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="!" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="C" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_percent"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_percent"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_delete"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_divide"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_divide"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_x"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_x"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_minus"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_plus"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <!-- Row 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_00"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_."
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_equal"
                style="@style/CalcButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:paddingStart="5.5dp"
                app:icon="@drawable/icon_equal"
                app:iconGravity="textEnd"
                app:iconTint="@color/light_gray"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
